<!DOCTYPE project [
       <!ENTITY common SYSTEM "common.xml">
]>

<project xmlns:repo="antlib:org.sonatype.aether.ant">

	&common;

  <repo:remoterepo id="distrepo" url="${project.distrepo.url}" type="default" releases="true" snapshots="true" updates="always" checksums="fail"/>
	
	<target name="setUp">
		<touch file="${project.dir.ant}/dummy-pom.xml"/>
		<touch file="${project.dir.ant}/other-pom.xml"/>
		<touch file="${project.dir.ant}/common.xml"/>
	</target>
	
	<target name="testDeployGlobalPom" depends="setUp">
		<repo:pom file="${project.dir.ant}/dummy-pom.xml"/>
		<repo:deploy reporef="distrepo"/>
	</target>
	
	<target name="testDeployOverrideGlobalPom" depends="setUp">
		<repo:pom file="${project.dir.ant}/dummy-pom.xml"/>
		<repo:deploy reporef="distrepo">
			<pom file="${project.dir.ant}/other-pom.xml"/>
		</repo:deploy>
	</target>
	
	<target name="testDeployOverrideGlobalPomByRef" depends="setUp">
		<repo:pom file="${project.dir.ant}/dummy-pom.xml"/>
    <repo:pom file="${project.dir.ant}/other-pom.xml" id="other"/>
		<repo:deploy reporef="distrepo"/>
		<repo:deploy pomref="other" reporef="distrepo"/>
	</target>
	
	<target name="testDeployAttachedArtifact" depends="setUp">
		<repo:deploy pomref="pom" reporef="distrepo">
			<repo:artifact refid="ant"/>
		</repo:deploy>
	</target>

	<target name="testCustomRepo" depends="setUp">
		<repo:localrepo dir="${project.dir}/target/local-repo-custom" />
		<repo:deploy pomref="pom" reporef="distrepo">
			<repo:artifact refid="ant"/>
		</repo:deploy>
	</target>

</project>
